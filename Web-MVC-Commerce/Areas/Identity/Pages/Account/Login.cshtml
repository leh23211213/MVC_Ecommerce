@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Account/Login.css" asp-append-version="true">
</head>

<body>
    <div class="container">
        <main class="form-side">
            <div class="justify-content-center row">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="overflow-hidden card">
                        <div class="bg-primary-subtle">
                            <div class="row">
                                <div class="col col-7">
                                    <div class="text-primary p-4">
                                        <h4>Welcome &#128079;</h4>
                                        <p>
                                            Login with your account!
                                        </p>
                                    </div>
                                </div>
                                <div class="col col-5 align-self-end">
                                    <img src="~/lib/image/Login/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="pt-0 card-body">
                            <div class="auth-logo">
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="~/lib/image/Login/CsharpLogo.png" alt="CSharp Logo"
                                            class="rounded-circle" height="55">
                                    </span>
                                </div>
                            </div>
                            <div class="p-2">
                                <form id="account" method="post" class="form-horizontal">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                            aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control"
                                            autocomplete="current-password" aria-required="true"
                                            placeholder="password" />
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="checkbox mb-3">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <div class="mt-3 d-grid">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log
                                            in</button>
                                    </div>
                                    <div class="mt-4 text-center">
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your
                                                password?</a>
                                        </p>
                                        <p>
                                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend
                                                email
                                                confirmation</a>
                                        </p>
                                    </div class="mt-4 text-center">
                                    <div class="my-form__actions">
                                        <div class="my-form__row">
                                            <span>Don't have an account?</span>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                                Sign Up Now
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <aside class="info-side text-center">
            <div class="blockquote-wrappe">
                <img src="~/lib/image/Login/megamenu-img.png" alt="">
            </div>
            <h4 class="mt-5">
                Get's
                <a href="" class="btn btn-primary">OverView</a>
                from another peoples
            </h4>
            <p class="text-muted">A central workspace for building, testing Website.</p>
        </aside>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>

</html>