@page "/Login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Account/Login.css" asp-append-version="true">
</head>

<body>
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                @* <header>&lt;header&gt;</header> *@
            </div>
            <div class="swiper-slide">
                <div class="grid">
                    <main>
                        <div class="sidebar-left">
                            <div class="account-pages my-5 pt-sm-5">
                                <div class="justify-content-center row">
                                    <div class="col-md-8 col-lg-6 col-xl-5">
                                        <div class="overflow-hidden card">
                                            <div class="bg-primary-subtle">
                                                <div class="row">
                                                    <div class="col col-7">
                                                        <div class="text-primary p-4">
                                                            <h4>Welcome &#128079;</h4>
                                                            <p>
                                                                Login with your account!
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="col col-5 align-self-end">
                                                        <img src="~/lib/image/Login/profile-img.png" alt=""
                                                            class="img-fluid">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="pt-0 card-body">
                                                <div class="auth-logo">
                                                    <div class="avatar-md profile-user-wid mb-4">
                                                        <span class="avatar-title rounded-circle bg-light">
                                                            <img src="~/lib/image/Login/Cshapr-icon-purple-logo.png"
                                                                alt="CSharp Logo" class="rounded-circle" height="55">
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="p-2">
                                                    <form id="account" method="post" class="form-horizontal">
                                                        <div asp-validation-summary="ModelOnly" class="text-danger"
                                                            role="alert">
                                                        </div>
                                                        <div class="form-floating mb-3">
                                                            <input asp-for="Input.Email" class="form-control"
                                                                autocomplete="username" aria-required="true"
                                                                placeholder="name@example.com" />
                                                            <label asp-for="Input.Email"
                                                                class="form-label">Email</label>
                                                            <span asp-validation-for="Input.Email"
                                                                class="text-danger"></span>
                                                        </div>
                                                        <div class="form-floating mb-3">
                                                            <input asp-for="Input.Password" class="form-control"
                                                                autocomplete="current-password" aria-required="true"
                                                                placeholder="password" />
                                                            <label asp-for="Input.Password"
                                                                class="form-label">Password</label>
                                                            <span asp-validation-for="Input.Password"
                                                                class="text-danger"></span>
                                                        </div>
                                                        <div class="checkbox mb-3">
                                                            <label asp-for="Input.RememberMe" class="form-label">
                                                                <input class="form-check-input"
                                                                    asp-for="Input.RememberMe" />
                                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                            </label>
                                                        </div>
                                                        <div class="mt-3 d-grid">
                                                            <button id="login-submit" type="submit"
                                                                class="w-100 btn btn-lg btn-primary">Log
                                                                In</button>
                                                        </div>
                                                    </form>
                                                    <div class="mt-4 text-center">

                                                        <p>
                                                        <div class="socials-row">
                                                            <section>
                                                                    @{
                                                                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                                                        {
                                                                        }
                                                                        else
                                                                        {
                                                                        <form id="external-account" asp-page="./ExternalLogin"
                                                                            asp-route-returnUrl="@Model.ReturnUrl" method="post"
                                                                            class="form-horizontal">
                                                                            <div>
                                                                                <p>
                                                                                        @foreach (var provider in
                                                                            Model.ExternalLogins!)
                                                                                        {
                                                                                            if (provider.Name == "Google")
                                                                                            {
                                                                                            <button type="submit"
                                                                                                class="btn btn-primary" name="provider"
                                                                                                value="@provider.Name"
                                                                                                title="Log in using your @provider.DisplayName account">
                                                                                                <img src="~/lib/image/Login/@provider.Name.ToLower()_logo.png"
                                                                                                    style="height: 30px; weight: 30px; "
                                                                                                    alt="@provider.DisplayName" />
                                                                                                Continue with @provider.DisplayName
                                                                                            </button>
                                                                                            }
                                                                                        }
                                                                                </p>
                                                                            </div>
                                                                        </form>
                                                                        }
                                                                    }
                                                            </section>
                                                        </div>
                                                        </p>
                                                        <p>
                                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot
                                                                your
                                                                password?</a>
                                                        </p>
                                                    </div>
                                                    <div class="my-form__actions">
                                                        <div class="my-form__row">
                                                            <span>Don't have an account?</span>
                                                            <a asp-page="./Register"
                                                                asp-route-returnUrl="@Model.ReturnUrl">
                                                                Sign Up Now
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="sidebar-right">
                            <div class="blockquote-wrappe">
                                <img src="~/lib/image/Login/megamenu-img.png" alt=""
                                    style="width: 700px; height: 700px;">
                            </div>
                            <h4 class=" mt-5">
                                Get's
                                <a href="" class="btn btn-primary">OverView</a>
                                from another peoples
                            </h4>
                            <p class="text-muted">A central workspace for building, testing Website.</p>
                        </div>
                    </main>
                </div>
            </div>
            <div class="swiper-slide">
                @*
                // TODO : E:\Destop\ui\footer-04
                <footer>&lt;footer&gt;</footer>
                *@
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>