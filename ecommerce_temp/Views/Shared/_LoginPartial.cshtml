@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@using ecommerce_temp.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
}
<div class="sidebar__profile">

        <div class="avatar__wrapper">
            <img src="~/lib/image/profile-icon.png" alt=""
                class="dropbtn img-thumbnail rounded-circle header-profile-user avatar"
                style="width: 36px; height: 36px">
            <div class="online__status"></div>
        </div>

        <div class="avatar__name hide">
            <span key="t-fullname" class="user-name"> @UserManager.GetUserName(User) </span>
            <span class="email"> @UserManager.GetUserName(User) </span>
        </div>

        <svg class="menu dropdown" width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
                d="M15.7575 9.12369C15.7575 8.50435 15.2554 8.00227 14.6361 8.00227C14.0167 8.00227 13.5146 8.50435 13.5146 9.12369C13.5146 9.74304 14.0167 10.2451 14.6361 10.2451C15.2554 10.2451 15.7575 9.74304 15.7575 9.12369Z"
                fill="#0F1419" fill-opacity="0.8" stroke="#0F1419" stroke-opacity="0.8" stroke-width="0.398729" />
            <path
                d="M10.1501 9.12369C10.1501 8.50435 9.648 8.00227 9.02865 8.00227C8.40931 8.00227 7.90723 8.50435 7.90723 9.12369C7.90723 9.74304 8.40931 10.2451 9.02865 10.2451C9.648 10.2451 10.1501 9.74304 10.1501 9.12369Z"
                fill="#0F1419" fill-opacity="0.8" stroke="#0F1419" stroke-opacity="0.8" stroke-width="0.398729" />
            <path
                d="M4.54314 9.12369C4.54314 8.50435 4.04107 8.00227 3.42172 8.00227C2.80237 8.00227 2.30029 8.50435 2.30029 9.12369C2.30029 9.74304 2.80237 10.2451 3.42172 10.2451C4.04107 10.2451 4.54314 9.74304 4.54314 9.12369Z"
                fill="#0F1419" fill-opacity="0.8" stroke="#0F1419" stroke-opacity="0.8" stroke-width="0.398729" />
        </svg>

    <ul id="profile-dropdown" class="dropdown-content">
        <a href="#" class="dropdown-item">
            <img src="~/lib/image/setting-icon.png" alt="Settings"
                style="border-radius:10px; width: 24px; height:24px;">
            Settings
        </a>
        <div class="dropdown-divider"></div>
        <a href="#" class="dropdown-item">
            <form id="logoutForm" class="form-inline" asp-area="Account" asp-controller="Account" method="post"
                asp-action="Logout" asp-route-returnUrl="~/Account/Login">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">
                    <img src="~/lib/image/logout-icon.png" alt="Logout" style="border-radius: 10px;" width="40"
                        height="40">Logout
                </button>
            </form>
        </a>
    </ul>
</div>
<script src="~/js/LoginPartial.js"></script>
