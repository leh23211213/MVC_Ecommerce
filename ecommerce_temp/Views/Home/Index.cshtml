<body>
    <!-- Header  -->
    <header id="header">
        <div class="header container">
            <div class="brand">
                <a href="#" class="main-link">
                    <li><img src="~/lib/image/CoverPage/icon/logo_dark.svg" alt="" class="logo"></li>
                </a>
            </div>

            <nav class="nav-list">
                <ul class="nav-links">
                    <li><a href="#features" class="nav-link">Features</a></li>
                    <li><a href="#get-involved" class="nav-link">Technology</a></li>
                    <li><a href="#footer" class="nav-link">Contact</a></li>
                </ul>
